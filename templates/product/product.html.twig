{% extends 'base.html.twig' %}

{% block content %}
<div class="row">
<div class="col-md-5 ">
<img src="../images/{{product.illustration}}" alt="" class="img-fluid">
</div>
<div class="col-md-7 my-auto">
<h3> {{product.name}} </h3>
<p> {{product.subtitle}} </p>
<span class="product-page-price">{{product.price/100 | number_format()}}fcfa</span> 
<hr>
<p>{{ product.description}} </p>
<a href=" {{path('addToCart',{'id':product.id})}} " class="btn btn-primary">Ajouter au panier</a>
</div>
</div>
<h3>Nos meilleurs ventes</h3>
    <div class="row">
      {% for product in products %}
      <div class="col-md-3">
        {% include 'product/single_product.html.twig' %}
      </div><!-- /.col-lg-4 -->
      {% endfor %}
    </div>
{% endblock %}